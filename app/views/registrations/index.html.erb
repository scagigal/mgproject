<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Registrations</h1>

<table width = 60% border = 1>
  <thead>
    <tr>
      <th>Last</th>
      <th>First</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th>Postal</th>
      <th>Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registrations.each do |registration| %>
      <tr>
        <td><%= registration.last %></td>
        <td><%= registration.first %></td>
        <td><%= registration.address %></td>
        <td><%= registration.city %></td>
        <td><%= registration.state %></td>
        <td><%= registration.country %></td>
        <td><%= registration.postal %></td>
        <td><%= registration.login %></td>
        <td><%= link_to 'Show', registration %></td>
        <td><%= link_to 'Edit', edit_registration_path(registration) %></td>
        <td><%= link_to 'Destroy', registration, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registration', new_registration_path %>
</div>